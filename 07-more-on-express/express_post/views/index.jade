extends layout

block content
  h1= title
  p Welcome to #{title}

  h2 Form Example
  form(method='post', action='/')
    fieldset
      legend Add a Use
      p
        label First Name
        input(name='user[first_name]')
      p
        label Last Name
        input(name='user[surname]')
      p
        input(type='submit', value='Save')